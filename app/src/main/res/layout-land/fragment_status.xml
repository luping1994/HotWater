<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="net.suntrans.hotwater_demon.ui.fragment.StatusFragment">

        <RelativeLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <ImageView
                android:layout_marginLeft="8dp"
                android:id="@+id/logo"
                android:layout_width="36.4dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/logo2" />
            <net.suntrans.looney.widgets.SegmentedGroup
                android:layout_centerHorizontal="true"
                android:id="@+id/segmented_group"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="4dp"
                app:sc_border_width="1dp"
                app:sc_checked_text_color="@color/colorPrimary"
                app:sc_corner_radius="2dp"
                app:sc_tint_color="@color/white">

                <RadioButton
                    android:id="@+id/radio0"
                    style="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:checked="true"
                    android:text="运行参数" />

                <RadioButton
                    android:id="@+id/radio1"
                    style="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="运行状态" />

            </net.suntrans.looney.widgets.SegmentedGroup>
            <TextView
                android:id="@+id/tushi"
                android:text="图示"
                android:paddingRight="16dp"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <net.suntrans.hotwater_demon.widgets.InnerViewpager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </net.suntrans.hotwater_demon.widgets.InnerViewpager>
    </LinearLayout>

</layout>