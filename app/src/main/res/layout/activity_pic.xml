<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hotwater"
    android:orientation="vertical">

    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </WebView>

    <LinearLayout
        android:layout_marginRight="16dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <RadioGroup

            android:id="@+id/radioGroup"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="4"
            android:gravity="center|left"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatRadioButton

                android:id="@+id/zidong"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:checked="true"
                android:text="自动"
                android:textColor="@color/mainTextColor" />

            <android.support.v7.widget.AppCompatRadioButton

                android:id="@+id/shoudong"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="手动"
                android:textColor="@color/mainTextColor" />
        </RadioGroup>
    </LinearLayout>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu_red"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:menu_colorNormal="@color/colorPrimary"
        app:menu_colorPressed="@color/colorAccent"
        app:menu_colorRipple="#62B2FF"
        app:menu_labels_ellipsize="end"
        app:menu_labels_singleLine="true">

        <com.github.clans.fab.FloatingActionButton

            android:id="@+id/fab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_jiaozhun"
            app:fab_label="校时"
            app:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton

            android:id="@+id/fab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_time_fab"
            app:fab_label="时间设置"
            app:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton

            android:id="@+id/fab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wendu_fab"
            app:fab_label="温度/水位设置"
            app:fab_size="mini" />


    </com.github.clans.fab.FloatingActionMenu>
</RelativeLayout>
